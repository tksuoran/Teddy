PREFIX         = @prefix@
BINDIR         = $(PREFIX)/bin
DATADIR        = $(PREFIX)/share
SHELL          = @SHELL@
AR             = @AR@
RANLIB         = @RANLIB@
CC             = @CC@
CXX            = @CXX@
INSTALL        = @INSTALL@
MKDEPEND       = $(CXX) $(CXXFLAGS) -MM
MKINSTALLDIRS  = $(SHELL) ./mkinstalldirs
CFLAGS         = @CFLAGS@
CXXFLAGS       = @CXXFLAGS@
LIBS           = @LIBS@
COMPACT_OUTPUT = @COMPACT_OUTPUT@

all: @NAME@

.SUFFIXES: $(SUFFIXES) .c .cpp .o

.cpp.o:
	$(CXX) $(CXXFLAGS) -o $@ -c $<
	$(COMPACT_OUTPUT)

.c.o:
	$(CC) $(CFLAGS) -o $@ -c $<
	$(COMPACT_OUTPUT)

clean:
	-rm -f core *~ */*~ */*/~
	-rm -f */*.o @NAME@ lib@NAME@.a @NAME@.exe

distclean: clean
	-rm -f .depend Makefile config.h config.status config.cache config.log
 

print:
	@echo "Build configuration for @NAME@:"
	@echo "AR       = $(AR)"
	@echo "CC       = $(CC)"
	@echo "CXX      = $(CXX)"
	@echo "CFLAGS   = $(CFLAGS)"
	@echo "CXXFLAGS = $(CXXFLAGS)"
	@echo "LIBS     = $(LIBS)"

depend .depend:
	@echo Updating dependencies...
	@for sdir in src; do $(MKDEPEND) $$sdir/*.cpp $$sdir/*.c | sed "s:^[^ ]:$$sdir/&:"; done > .depend 2>/dev/null

ifneq ($(MAKECMDGOALS), clean)
  ifneq ($(MAKECMDGOALS), print)
    ifneq ($(MAKECMDGOALS), distclean)
      -include .depend
    endif
  endif
endif


.PHONY: all clean distclean install uninstall depend

@NAME@_srcs := $(wildcard src/*.cpp)
@NAME@: $(@NAME@_srcs:.cpp=.o) @DEP_O@
	$(AR) rc lib@NAME@.a $^
	$(RANLIB) lib@NAME@.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ lib@NAME@.a $(LIBS) lib@NAME@.a $(LIBS)
	$(COMPACT_OUPUT)
